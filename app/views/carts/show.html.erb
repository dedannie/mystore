<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @cart.product_items.each do |item| %>
                              <tr>
                                  <td class="cart__product__item">
                                      <!-- <img src="img/shop-cart/cp-1.jpg" alt=""> -->
                                      <%= image_tag item.product.image, style: 'height: 90px;' %>
                                      <div class="cart__product__item__title">
                                          <h6><%= item.product.title %></h6>
                                          <div class="rating">
                                              <i class="fa fa-star"></i>
                                              <i class="fa fa-star"></i>
                                              <i class="fa fa-star"></i>
                                              <i class="fa fa-star"></i>
                                              <i class="fa fa-star"></i>
                                          </div>
                                      </div>
                                  </td>
                                  <td class="cart__price"><%= number_to_currency item.product.price %></td>
                                  <td class="cart__quantity">
                                      <div class="pro-qty">
                                          <%= item.quantity %>
                                      </div>
                                  </td>
                                  <td class="cart__total"><%= number_to_currency(item.product.price * item.quantity) %></td>
                                  <td class="cart__close"><span class="icon_close"></span></td>
                              </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn">
                    <!-- <a href="#">Continue Shopping</a> -->
                    <%= link_to 'Continue Shopping', shop_path %>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn update__btn">
                    <%= link_to 'Empty Cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }  %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="discount__content">
                    <h6>Discount codes</h6>
                    <form action="#">
                        <input type="text" placeholder="Enter your coupon code">
                        <button type="submit" class="site-btn">Apply</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-2">
                <div class="cart__total__procced">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span><%= number_to_currency @cart.total_price %></span></li>
                        <li>Total <span><%= number_to_currency @cart.total_price %></span></li>
                    </ul>
                    <%= link_to 'Proceed to checkout', new_order_path, method: :get, class: "primary-btn" %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Cart Section End -->

